#:kivy 2.3.1

# This is the look and feel of the ball
<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

# This is a .kv file, it helps us with the look and feel of the PongGame class in their language
# Every instance of the PongGame class will implement these rules
<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas:
        # Make a rectangle, def. white color, that is 10 pixels wide and centered on the x axis,
        # middle of the screen
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    # This is just a label, includes size, position, and what it says, can add more later
    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    # Adding the pong ball into the game
    PongBall:
        id: pong_ball
        center: self.parent.center

    # Adding the players
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y